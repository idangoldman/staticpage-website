<div id="posts" class="row">
  {% for post in site.posts %}
    <article class="post xsmall-11 medium-7 column">

      <time datetime="{{ post.date }}" class="date">
        {{ post.date | date: "%b %d, %Y" | upcase }}
      </time>

  		<h2 class="title">
        <a href="{{ post.url }}">{{ post.title }}</a>
      </h2>

      {{ post.excerpt | replace: '<p>', '<p class="paragraph">' }}

  		<a href="{{ post.url }}" class="continue-reading">
        Continue Reading &#8594;
      </a>

  	</article>
  {% endfor %}
</div>
