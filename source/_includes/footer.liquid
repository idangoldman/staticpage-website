<footer id="footer">

  <div class="container">
    <div class="row">

      <div class="twelve column">
        <nav class="menu">
          {% for link in site.data.topbar.menu %}
          <a href="{{ link.url }}" class="btn-link">
            {{ link.text }}
          </a>
          {% endfor %}
        </nav>
      </div>

      <div class="twelve column">
        {{ site.footer.fine_print | markdownify }}
      </div>

    </div>
  </div>

  <div class="illustration">
    {% svg "{{ site.footer.illustration }}" %}
  </div>

</footer>
