<nav id="navigation" class="row">
  {% if page.previous.url %}
    <a id="previous" class="xsmall-10 medium-6 column" href="{{ page.previous.url }}">
      {{ page.previous.title }}
      <span>&#8592; Previous Post</span>
    </a>
  {% else %}
    <div></div>
  {% endif %}
  {% if page.next.url %}
    <a id="next" class="xsmall-10 medium-6 column" href="{{ page.next.url }}">
      {{ page.next.title }}
      <span>Next Post &#8594;</span>
    </a>
  {% endif %}
</nav>
