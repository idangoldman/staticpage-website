<ul class="navigation">
  {% if page.previous.url %}
    <a class="previous" href="{{ page.previous.url }}">
      {{ page.previous.title }}
      <span>&#8592; Previous Post</span>
    </a>
  {% else %}
    <li></li>
  {% endif %}
  {% if page.next.url %}
    <a class="next" href="{{ page.next.url }}">
      {{ page.next.title }}
      <span>Next Post &#8594;</span>
    </a>
  {% endif %}
</ul>
